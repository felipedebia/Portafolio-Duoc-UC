<%- include('partials/nav.ejs') %>
        <!-- your content here -->
          <div class="content">
            <div class="container-fluid">
              <div class="row">
                <div class="col-md-8">
                  <div class="card">
                    <div class="card-header card-header-warning">
                      <h4 class="card-title">Subasta de Fruta <%= data[0].id_subastaF%></h4>
                    </div>
                    <div class="card-body">
                      <h3 class="card-title mb-4 mt-3">Ofertas de la subasta de fruta</h3>
                      <div class="card-text">
                        <form action="/api_usuarios/modificarMiPerfil/" method="POST">
                          
                          <ul class="timeline timeline-simple mr-5">
                            <% for(var ofertaProductor of OfertasProductores) { %>
                              <% if (ofertaProductor.fk_id_subastaf == data[0].id_subastaF){ %>
                                <li class="timeline-inverted">
                                  <div class="timeline-badge success">
                                    <i class="material-icons">card_travel</i>
                                  </div>
                                  <div class="timeline-panel">
                                    <div class="timeline-heading">
                                      <span class="badge badge-pill badge-success">OFERTA DE PRODUCTOR</span>
                                    </div>
                                    <div class="timeline-body">
                                      <p>ID Oferta: <%= ofertaProductor.id_ofertaP %></p>
                                      <p>Cantidad propuesta: <%= ofertaProductor.cantidad %></p>
                                      <p>Precio por kilo: <%= ofertaProductor.precio_por_kilo %></p>
                                      <hr>
                                      <a href="../api_ofertas/aceptarOferta/"><button type="button" class="btn btn-success btn-sm pull-right">Aceptar oferta</button></a>
                                      <a href="../api_ofertas/rechazarOferta/"><button type="button" class="btn btn-danger btn-sm pull-right">Rechazar oferta</button></a>
                                    </div>
                                    <h6>
                                      <i class="ti-time"></i> Fecha de creación con moment
                                    </h6>
                                  </div>
                                </li>
                                
                              <% } else { %> Si tiene 0 filas entonces mostrar
                                <li class="timeline-inverted">
                                  <div class="timeline-badge danger">
                                    <i class="material-icons">card_travel</i>
                                  </div>
                                  <div class="timeline-panel">
                                    <div class="timeline-heading">
                                      <span class="badge badge-pill badge-danger">NINGUNA</span>
                                    </div>
                                    <div class="timeline-body">
                                      <p>Actualmente no tienes ninguna oferta de frutas, regresa en algunos días.</p>
                                    </div>
                                  </div>
                                </li>
                              <% } %>
                            <% } %>
                          </ul>

                        </form>
                        </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="card card-profile">
                    <div class="card-body">
                      <h4 class="card-title mt-4 mb-4">Subasta de Fruta <%= data[0].id_subastaF%></h4>
                      <span class="mt-4"><strong>Fecha de creación:</strong> <%= data[0].fecha_creacion %></span></br>
                      <span><strong>Fecha de última actualización:</strong> <%= data[0].fecha_actualizacion %></span></br>
                      <span class="mb-4"><strong>Fecha de termino:</strong> <%= data[0].fecha_termino %></span></br></br>
                      <span class="mb-4"><strong>Estado de la subasta:</strong> <span class="badge badge-pill badge-success"><%= data[0].fk_texto_estado %></span></span></br></br>

                      <h4 class="card-title mt-4 mb-4">Opciones de la subasta</h4>
                      <button class="btn btn-warning mb-2" type="submit">Crear una nueva oferta</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

<%- include('partials/footer.ejs') %>

</body>
</html>