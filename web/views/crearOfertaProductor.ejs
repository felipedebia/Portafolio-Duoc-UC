<%- include('partials/nav.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                      <div class="card-header card-header-tabs card-header-warning">
                        <h4 class="card-title">Crear nueva oferta de Productor</h4>
                      </div>
                      <div class="card-body">
                        <h3 class="card-title mb-4 mt-3">Ingresa los datos de la nueva oferta</h3>
                        <div class="card-text">
                          <form action="/api_ofertas/crearOfertaProductor/<%= data[0].fk_id_subastaf%>" method="POST">
                            <div class="row">
                              <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group my-label required">
                                  <label>Producto</label>
                                  <select class="selectpicker form-control" name="fk_id_producto" data-style="select-with-transition btn" title="Selecciona una opciÃ³n">
                                    <% for(var producto of Productos) { %>
                                    <option name="<%= producto.fruta_fk_texto_nombre %> <%= producto.fruta_calidad_fk_texto_calidad %>" value="<%= producto.id_producto %>"><%= producto.fruta_fk_texto_nombre %> <%= producto.fruta_calidad_fk_texto_calidad %></option>
                                    <% } %>
                                </select>
                              </div>
                              <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group my-label required">
                                  <label>Cantidad</label>
                                  <input class="form-control input-sm" id="inputCantidad" type="number" name="cantidad" placeholder="Cantidad" required></div>
                              </div>
                            </div>
                            <label>Precio por kilo *</label>
                            <input class="form-control mb-4" id="inputPrecio_por_kilo" type="number" name="precio_por_kilo" placeholder="Precio por kilo" required>
                            <button class="btn btn-primary mb-2 pull-right" type="submit">Guardar cambios</button>
                          </form>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('partials/footer.ejs') %>

<script>
  function showPassword() {
    var x = document.getElementById("inputPassword");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>

</body>
</html>