<%- include('partials/nav.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-tabs card-header-info">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <span class="nav-tabs-title">Mis pedidos:</span>
                                    <ul class="nav nav-tabs" data-tabs="tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="#listadoPedidos" data-toggle="tab">
                                                <i class="material-icons">format_list_bulleted</i> Listado de Pedidos
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#crearPedido" data-toggle="tab">
                                                <i class="material-icons">add</i> Agregar nuevo pedido
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="listadoPedidos">
                                    <div class="card-body table-responsive">
                                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                            <thead class="text-info">
                                                <th scope="col">N°</th>
                                                <th scope="col">Direccion</th>
                                                <th scope="col">Fecha pedido</th>
                                                <th scope="col">Estado</th>
                                                <th scope="col">Opciones</th>
                                            </thead>
                                            <tbody>
                                                <% for(var pedido of Pedidos) { %>
                                                    <% if (pedido.fk_id_usuario == session.id_usuario && pedido.id_estado != 6){ %>
                                                        <div class="modal fade" id="modalPedido<%= pedido.id_pedido %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="exampleModalLabel">ID Pedido #
                                                                            <%= pedido.id_pedido %>
                                                                        </h5>
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                              </button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <span><strong>Direccion de despacho:</strong> <%= pedido.direccion_despacho %></span></br>
                                                                        <span><strong>Fecha del pedido:</strong> <%= pedido.fecha_creacion %></span></br>
                                                                        <span><strong>Estado del pedido:</strong> <%= pedido.descripcion %></span>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <span><strong>Detalle del pedido:</strong></span></br>
                                                                    </div>
                                                                    <% for(var detalle of Detalles){ %>
                                                                        <%if(detalle.id_pedido == pedido.id_pedido){%>
                                                                            <span class="ml-4">Fruta: <%= detalle.nombre %> - Calidad: <%= detalle.calidad %> - Cantidad: <%= detalle.cantidad %></span>
                                                                        <% } %>
                                                                    <% } %>
                                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <tr>
                                                            <th scope="row">
                                                                <%= pedido.id_pedido %>
                                                            </th>
                                                            <td>
                                                                <%= pedido.direccion_despacho %>
                                                            </td>
                                                            <td>
                                                                <%= pedido.fecha_creacion %>
                                                            </td>
                                                            <td>
                                                                <%= pedido.descripcion %>
                                                            </td>
                                                            <td>
                                                                <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#modalPedido<%= pedido.id_pedido %>">Ver</button>
                                                                <a href="/pedido_detalles/<%= pedido.id_pedido %>"><button type="button" class="btn btn-info btn-sm">Modificar</button></a>
                                                                <a href="../api_pedidos/eliminarPedido/<%= pedido.id_pedido %>"><button type="button" class="btn btn-info btn-sm">Eliminar</button></a>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                            <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="crearPedido">
                                    <div class="card-body">
                                        <h3 class="card-title mb-4">Ingresa los datos de un nuevo Pedido</h3>
                                        <div class="card-text">
                                            <form action="../api_pedidos/crearPedido" method="POST" class="formValidation" novalidate>
                                                <div class="row">
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>País de destino *</label>
                                                            <select class="form-control" name="pais" data-style="select-with-transition btn" title="Selecciona una opción">
                                                                <%
                                                                    Paises.sort((a,b) => {
                                                                        const nombreA = a.nombre.toLowerCase();
                                                                        const nombreB = b.nombre.toLowerCase();
                                                                        if(nombreA < nombreB){
                                                                            return -1;
                                                                        }
                                                                        if(nombreA > nombreB){
                                                                            return 1;
                                                                        }
                                                                        return 0;
                                                                    });
                                                                    %>
                                                                <% for(var pais of Paises){ %>
                                                                    <option name="<%=pais.nombre%>" value="<%=pais.nombre%>"><%=pais.nombre%></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Ciudad de destino *</label>
                                                            <select class="form-control" name="fk_id_ciudad" data-style="select-with-transition btn" title="Selecciona una opción">
                                                                <%
                                                                    Ciudades.sort((a,b) => {
                                                                        const nombreA = a.nombre.toLowerCase();
                                                                        const nombreB = b.nombre.toLowerCase();
                                                                        if(nombreA < nombreB){
                                                                            return -1;
                                                                        }
                                                                        if(nombreA > nombreB){
                                                                            return 1;
                                                                        }
                                                                        return 0;
                                                                    });
                                                                    %>
                                                                <% for(var ciudad of Ciudades){ %>
                                                                    <option name="fk_id_ciudad" value="<%=ciudad.id_ciudad%>"><%=ciudad.nombre%></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-12 col-md-12 mt-2">
                                                        <div class="form-group">
                                                            <label>Dirección de despacho *</label>
                                                            <input class="form-control mb-4" id="inputDireccion" type="text" name="direccion_despacho" required>
                                                            <div class="invalid-feedback">Ingresa la Dirección de Despacho</div>
                                                        </div>
                                                    </div>
                                                    <input id="fk_id_usuario" name="fk_id_usuario" type="hidden" value="<%= session.id_usuario %>">
                                                </div>
                                                <button class="btn btn-info mb-2 pull-right" type="submit"><i class="fas fa-sign-in-alt"></i> Crear nuevo pedido</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/footer.ejs') %>

<script>
    $(document).ready(function() {
      $('#datatables').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ],
        "pagingType": "full_numbers",
        "pageLength": 15,
        "bLengthChange": false,
        responsive: true,
        language: {
            search: "_INPUT_",
            info: "Viendo página _PAGE_ de _PAGES_",
            zeroRecords: "No hay información que mostrar",
            infoEmpty: "Sin información",
            searchPlaceholder: "Buscar contrato",
            "paginate": {
                "first": "Primero",
                "last": "Último",
                "next": "Siguiente",
                "previous": "Anterior"
            },
            "buttons": {
                "copy": "Copiar",
                "colvis": "Visibilidad",
                "collection": "Colección",
                "colvisRestore": "Restaurar visibilidad",
                "copySuccess": {
                    "1": "Copiada 1 fila al portapapeles",
                    "_": "Copiadas %d fila al portapapeles"
                },
                "copyTitle": "Copiar al portapapeles",
                "csv": "CSV",
                "excel": "Excel",
                "pageLength": {
                    "-1": "Mostrar todas las filas",
                    "_": "Mostrar %d filas"
                },
                "pdf": "PDF",
                "print": "Imprimir"
            }
        }
      });
      var table = $('#datatable').DataTable();
    });
</script>

</body>
</html> 