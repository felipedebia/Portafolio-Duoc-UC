<%- include('partials/nav.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-tabs card-header-primary">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <span class="nav-tabs-title">Usuarios:</span>
                                    <ul class="nav nav-tabs" data-tabs="tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="#profile" data-toggle="tab">
                                                <i class="material-icons">bug_report</i> Ver Usuarios
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#messages" data-toggle="tab">
                                                <i class="material-icons">code</i> Agregar nuevo usuario
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#settings" data-toggle="tab">
                                                <i class="material-icons">cloud</i> Server
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="profile">
                                    <div class="card-body table-responsive">
                                        <table class="table table-hover">
                                            <thead class="text-info">
                                                <th scope="col">#</th>
                                                <th scope="col">Nombre</th>
                                                <th scope="col">Apellido</th>
                                                <th scope="col">Correo electrónico</th>
                                                <th scope="col">Opciones</th>
                                            </thead>
                                            <tbody>
                                                <% for(var i=0; i < Usuarios.length; i++) { %>
                                                    <tr>
                                                        <th scope="row">
                                                            <%= i %>
                                                        </th>
                                                        <td>
                                                            <%= Usuarios[i].nombre %>
                                                        </td>
                                                        <td>
                                                            <%= Usuarios[i].apellido %>
                                                        </td>
                                                        <td>
                                                            <%= Usuarios[i].correo %>
                                                        </td>
                                                        <td><a class="card-link" href="/modificarUsuario/<%= Usuarios[i].id_usuario %>">Modificar</a><a class="card-link" href="/eliminarUsuario/<%= Usuarios[i].id_usuario %>">Eliminar</a></td>
                                                    </tr>
                                                    <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="messages">
                                    <div class="card login-form">
                                        <div class="card-body">
                                            <h3 class="card-title text-center">Ingresa los datos del nuevo usuario</h3>
                                            <div class="card-text">
                                                <!-- to error: add class "has-danger" -->
                                                <div class="alert alert-danger alert-dismissible fade show" role="alert">Incorrect username or password.</div>
                                                <form action="/api/crearUsuario" method="POST">
                                                    <!-- to error: add class "has-danger" -->
                                                    <div class="row">
                                                        <div class="col-xs-6 col-sm-6 col-md-6">
                                                            <div class="form-group"><label>Nombre *</label><input class="form-control mb-4 input-sm" id="nombre" type="text" name="nombre" placeholder="Nombre" size="25" required=""></div>
                                                        </div>
                                                        <div class="col-xs-6 col-sm-6 col-md-6">
                                                            <div class="form-group"><label>Apellido *</label><input class="form-control input-sm" id="apellido" type="text" name="apellido" placeholder="Apellido" size="25" required=""></div>
                                                        </div>
                                                    </div>
                                                    <label>Correo electrónico *</label>
                                                    <input class="form-control mb-4" id="inputEmail" type="email" name="correo" placeholder="Correo electrónico" size="30" required="">
                                                    <label>Contraseña *</label>
                                                    <input class="form-control mb-4" id="inputPassword" type="password" name="password" placeholder="Contraseña" size="40" required="">
                                                    <label>Número de documento *</label>
                                                    <input class="form-control mb-4" id="inputNumDocumento" type="number" name="num_documento" placeholder="Número de documento" size="20" required="">
                                                    <label>Fecha de nacimiento *</label>
                                                    <input class="form-control mb-4" id="inputFechaNacimiento" type="date" name="fecha_nacimiento" placeholder="Fecha de nacimiento" required="">
                                                    <label>Teléfono *</label>
                                                    <input class="form-control mb-4" id="inputTelefono" type="number" name="telefono" placeholder="Teléfono" size="15" required="">
                                                    <div class="form-group">
                                                        <label>Género *</label>
                                                        <select class="form-control" name="genero">
                                                          <option name="" value="0" selected="">Escoger...</option>
                                                          <option name="femenino" value="1">Femenino</option>
                                                          <option name="masculino" value="2">Masculino</option>
                                                        </select>
                                                    </div>
                                                    <div class="row mb-4">
                                                        <div class="col-xs-6 col-sm-6 col-md-6">
                                                            <div class="form-group">
                                                                <label>Tipo de usuario *</label>
                                                                <select class="form-control" name="tipo_usuario">
                              <option name="" value="0" selected="">Escoger...</option>
                              <option name="administrador" value="1">Administrador</option>
                              <option name="transportista" value="2">Transportista</option>
                              <option name="clienteExterno" value="3">Cliente externo</option>
                              <option name="clienteInterno" value="4">Cliente interno</option>
                              <option name="productor" value="5">Productor</option>
                              <option name="consultor" value="6">Consultor</option>
                            </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <button class="btn btn-primary btn-block mb-2" type="submit"><i class="fas fa-sign-in-alt"></i> Registrar nueva cuenta</button>

                                                    <div class="sign-up">
                                                        <a href="#">¿Has olvidado tu contraseña?</a>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="settings">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <div class="form-check">
                                                        <label class="form-check-label">
                 <input class="form-check-input" type="checkbox" value="">
                 <span class="form-check-sign">
                   <span class="check"></span>
                 </span>
               </label>
                                                    </div>
                                                </td>
                                                <td>Lines From Great Russian Literature? Or E-mails From My Boss?</td>
                                                <td class="td-actions text-right">
                                                    <button type="button" rel="tooltip" title="Edit Task" class="btn btn-primary btn-link btn-sm">
               <i class="material-icons">edit</i>
             </button>
                                                    <button type="button" rel="tooltip" title="Remove" class="btn btn-danger btn-link btn-sm">
               <i class="material-icons">close</i>
             </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div class="form-check">
                                                        <label class="form-check-label">
                 <input class="form-check-input" type="checkbox" value="" checked>
                 <span class="form-check-sign">
                   <span class="check"></span>
                 </span>
               </label>
                                                    </div>
                                                </td>
                                                <td>Flooded: One year later, assessing what was lost and what was found when a ravaging rain swept through metro Detroit
                                                </td>
                                                <td class="td-actions text-right">
                                                    <button type="button" rel="tooltip" title="Edit Task" class="btn btn-primary btn-link btn-sm">
               <i class="material-icons">edit</i>
             </button>
                                                    <button type="button" rel="tooltip" title="Remove" class="btn btn-danger btn-link btn-sm">
               <i class="material-icons">close</i>
             </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div class="form-check">
                                                        <label class="form-check-label">
                 <input class="form-check-input" type="checkbox" value="" checked>
                 <span class="form-check-sign">
                   <span class="check"></span>
                 </span>
               </label>
                                                    </div>
                                                </td>
                                                <td>Sign contract for "What are conference organizers afraid of?"</td>
                                                <td class="td-actions text-right">
                                                    <button type="button" rel="tooltip" title="Edit Task" class="btn btn-primary btn-link btn-sm">
               <i class="material-icons">edit</i>
             </button>
                                                    <button type="button" rel="tooltip" title="Remove" class="btn btn-danger btn-link btn-sm">
               <i class="material-icons">close</i>
             </button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>