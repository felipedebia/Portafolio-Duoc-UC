<%- include('partials/nav.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-info">
                            <h4 class="card-title">Pedido detalle</h4>
                            <p class="card-category">Ingrese el tipo de fruta, calidad y cantidad deseada</p>
                        </div>
                        <div class="card-body">
                            <form action="../api_pedidos/crearPedidoDetalle" method="POST" class="formValidation" novalidate>
                                <div class="row">
                                    <div class="col-xs-4 col-sm-4 col-md-4">
                                        <label>Elige una fruta *</label>
                                        <select class="form-control" name="fk_id_fruta" data-style="select-with-transition btn" title="Selecciona una opción">
                                        <%
                                            Frutas.sort((a,b) => {
                                                const nombreA = a.nombre.toLowerCase();
                                                const nombreB = b.nombre.toLowerCase();
                                                if(nombreA < nombreB){
                                                    return -1;
                                                }
                                                if(nombreA > nombreB){
                                                    return 1;
                                                }
                                                return 0;
                                            });
                                            %>
                                            <% for(var fruta of Frutas){ %>
                                                <option name="fk_id_fruta" value="<%=fruta.id_fruta%>"><%=fruta.nombre%></option>
                                            <% } %>
                                        </select>
                                    </div>
                                    <div class="col-xs-4 col-sm-4 col-md-4">
                                        <label>Elige la calidad buscada *</label>
                                        <select class="form-control" name="fk_id_calidad" data-style="select-with-transition btn" title="Selecciona una opción">
                                                <% for(var calidad of Calidades){ %>
                                                    <option name="fk_id_calidad" value="<%=calidad.id_calidad%>"><%=calidad.nombre%></option>
                                                <% } %>
                                            </select>
                                    </div>
                                    <div class="col-xs-4 col-sm-4 col-md-4">
                                        <label>Digite la cantidad de KG buscados *</label>
                                        <input class="form-control" id="cantidad" type="number" name="cantidad" maxLength="6" required>
                                        <div class="invalid-feedback">Ingresa Número de kg de fruta</div>
                                    </div>
                                    <input id="fk_id_pedido" name="fk_id_pedido" type="hidden" value="<%= data[0].id_Pedido%>">
                                </div>
                                <button class="btn btn-info mt-4 mb-2 pull-right" type="submit">Añadir producto</button>
                            </form>
                            <table class="table table-hover">
                                <thead class="text-warning">
                                    <th>ID</th>
                                    <th>Fruta</th>
                                    <th>Calidad</th>
                                    <th>Cantidad</th>
                                    <th>Opciones</th>
                                </thead>
                                <tbody>

                                    <% for(var detalle of Detalles){ %>
                                        <% if( detalle.id_pedido == data[0].id_Pedido ){ %>
                                            <tr>
                                                <td>
                                                    <%= detalle.id_pdetalle %>
                                                </td>
                                                <td>
                                                    <%= detalle.nombre %>
                                                </td>
                                                <td>
                                                    <%= detalle.calidad %>
                                                </td>
                                                <td>
                                                    <%= detalle.cantidad %>
                                                </td>
                                                <td>
                                                    <button type="button" onclick="window.location.href='../api_pedidos/eliminarPedidoDetalles/<%= detalle.id_pdetalle %>'" class="btn btn-danger btn-sm">Eliminar</button>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } %>

                                </tbody>
                            </table>
                            <% if( Detalles.length > 0 ){ %>
                                <div class="col text-center">
                                    <a href="../api_pedidos/confirmarPedido/<%= data[0].id_Pedido %>"><button type="button" class="btn btn-success mb-2 mt-4 medium-size-btn">Confirmar pedido</button></a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>

</body>
</html> 