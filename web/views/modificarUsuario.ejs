      alert(msgStr)
  </script>
  <link rel="stylesheet" href="/js/jquery.min.js">
  <link rel="stylesheet" href="/js/popper.js">
  <link rel="stylesheet" href="/js/bootstrap.min.js">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  

<div class="global-container">
  <div class="card login-form">
    <div class="card-body">
      <h3 class="card-title text-center">Ingresa los datos del nuevo usuario</h3>
      <div class="card-text">
        <form action="/api/crearUsuario" method="POST">
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group"><label>Nombre *</label><input class="form-control mb-4 input-sm" id="nombre" type="text" name="nombre" placeholder="Nombre" size="25" required="" value=""></div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group"><label>Apellido *</label><input class="form-control input-sm" id="apellido" type="text" name="apellido" placeholder="Apellido" size="25" required="" value=""></div>
            </div>
          </div>
          <label>Correo electrónico *</label>
          <input class="form-control mb-4" id="inputEmail" type="email" name="correo" placeholder="Correo electrónico" size="30" required="" value="">
          <label>Contraseña *</label>
          <input class="form-control mb-4" id="inputPassword" type="password" name="password" placeholder="Contraseña" size="40" required="" value="">
          <label>Número de documento *</label>
          <input class="form-control mb-4" id="inputNumDocumento" type="number" name="num_documento" placeholder="Número de documento" size="20" required="" value="">
          <label>Fecha de nacimiento *</label>
          <input class="form-control mb-4" id="inputFechaNacimiento" type="date" name="fecha_nacimiento" placeholder="Fecha de nacimiento" required="" value="">
          <label>Teléfono *</label>
          <input class="form-control mb-4" id="inputTelefono" type="number" name="telefono" placeholder="Teléfono" size="15" required="" value="">
          <div class="form-group">
            <label>Género *</label>
            <select class="form-control" name="genero">
              <option name="" value="0" selected="">Escoger...</option>
              <option name="femenino" value="1">Femenino</option>
              <option name="masculino" value="2">Masculino</option>
            </select>
          </div>
          <div class="row mb-4">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <label>Tipo de usuario *</label>
                <select class="form-control" name="tipo_usuario">
                  <option name="" value="0" selected="">Escoger...</option>
                  <option name="administrador" value="1">Administrador</option>
                  <option name="transportista" value="2">Transportista</option>
                  <option name="clienteExterno" value="3">Cliente externo</option>
                  <option name="clienteInterno" value="4">Cliente interno</option>
                  <option name="productor" value="5">Productor</option>
                  <option name="consultor" value="6">Consultor</option>
                </select>
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <label>Estado de cuenta *</label>
                <select class="form-control" name="estado_cuenta">
                  <option name="" value="0" selected="">Escoger...</option>
                  <option name="activada" value="1">Activada</option>
                  <option name="desactivada" value="2">Desactivada</option>
                </select>
              </div>
            </div>
          </div>


          <button class="btn btn-primary btn-block mb-2" type="submit"><i class="fas fa-sign-in-alt"></i> Registrar nueva cuenta</button>
          
          <div class="sign-up">
            <a href="#">¿Has olvidado tu contraseña?</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

</body>
</html>