<body>
  <%- include('partials/header_login.ejs') %>
      <link rel="stylesheet" href="/js/jquery.min.js">
      <link rel="stylesheet" href="/js/popper.js">
      <link rel="stylesheet" href="/js/bootstrap.min.js">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

      <div class="container-fluid ps-md-0">
          <div class="row g-0">
              <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
              <div class="col-md-8 col-lg-6">
                  <div class="login d-flex align-items-center py-5">
                      <div class="container">
                          <div class="row">
                              <div class="col-md-9 col-lg-8 mx-auto">
                                    <div class="mb-5">
                                        <img class="" src="/images/Logo_Maipo_Grande.jpg">
                                    </div>
                                    <!-- Sign In Form -->
                                    <% if (alertError == 1){ %>
                                    <div class="callout callout-danger">
                                        <h4>Error!</h4>
                                        El correo electrónico o contraseña es incorrecto
                                    </div>
                                    <% } else if (alertError == 2) { %>
                                    <div class="callout callout-danger">
                                        <h4>Error!</h4>
                                        La cuenta con la que estás intentando ingresar actualmente está desactivada
                                    </div>
                                    <% } %>
                                    <form action="auth" method="POST" class="formValidation" novalidate>
                                        <p class="mb-5">El acceso a este sistema solo debe ser realizado por personal autorizado por la empresa Maipo Grande. El uso fraudulento de este sistema puede ser penado por ley.</p>
                                        <div class="form-floating mb-3">
                                            <label for="floatingInput">Correo electrónico</label>
                                            <input type="email" class="form-control" name="correo" id="floatingInput" placeholder="Escribe tu Correo electrónico" required>
                                            <div class="invalid-feedback">Correo electrónico no válido</div>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <label for="floatingPassword">Contraseña</label>
                                            <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="Escribe tu Contraseña" required>
                                            <div class="invalid-feedback">Contraseña no válida</div>
                                        </div>

                                        <div class="d-grid mt-5">
                                            <button class="btn btn-lg btn-primary btn-login text-uppercase fw-bold mb-2" type="submit">Iniciar sesión</button>
                                            <div>
                                                <a class="small" href="#">¿Has olvidado tu contraseña?</a>
                                            </div>
                                        </div>
                                  </form>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>

      <script> (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('formValidation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
      })();
      </script>

</body>
</html> 