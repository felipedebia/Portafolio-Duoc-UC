<%- include('partials/nav.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-tabs card-header-success">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <span class="nav-tabs-title">Ordenes:</span>
                                    <ul class="nav nav-tabs" data-tabs="tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="#listadoOrdenesBodegas" data-toggle="tab">
                                                <i class="material-icons">format_list_bulleted</i> Listado de Ordenes Bodegas
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#crearOrdenBodega" data-toggle="tab">
                                                <i class="material-icons">add</i> Crear nueva Orden Bodega
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="listadoOrdenesBodegas">
                                    <div class="card-body table-responsive">
                                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                            <thead class="text-info">
                                                <th scope="col">Orden N°</th>
                                                <th scope="col">Fecha de ingreso</th>
                                                <th scope="col">Fecha de retiro</th>
                                                <th scope="col">Estado de la orden</th>
                                                <th class="disabled-sorting">Opciones</th>
                                            </thead>
                                            <tbody>
                                                <% for(var ordenBodega of OrdenesBodegas) { %>
                                                    <tr>
                                                        <th scope="row">
                                                            <%= ordenBodega.id_ordenB %>
                                                        </th>
                                                        <td>
                                                            <%= ordenBodega.fecha_ingreso %>
                                                        </td>
                                                        <td>
                                                            <%= ordenBodega.fecha_retiro %>
                                                        </td>
                                                        <td>
                                                            <%= ordenBodega.fk_id_estado %>
                                                        </td>
                                                        <td>
                                                            <a href="/orden_bodega/<%= ordenBodega.id_ordenB %>"><button type="button" class="btn btn-success btn-sm">Ver orden</button></a>
                                                            <a href="/modificarOrdenBodega/<%= ordenBodega.id_ordenB %>"><button type="button" class="btn btn-success btn-sm">Modificar</button></a>
                                                            <a href="../api_ordenes/anularOrdenBodega/<%= ordenBodega.id_ordenB %>"><button type="button" class="btn btn-success btn-sm">Anular</button></a>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="crearOrdenBodega">
                                    <div class="card-body">
                                        <h3 class="card-title mb-4">Ingresa los datos de la nueva orden</h3>
                                        <div class="card-text">
                                            <form action="../api_ordenes/crearOrdenBodega" method="POST" class="formValidation" novalidate>
                                                <div class="row">
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group my-label required">
                                                            <label>Fecha de Ingreso</label>
                                                            <input class="form-control mb-4" id="inputFechaIngreso" type="date" name="fecha_ingreso" required>
                                                            <div class="invalid-feedback">Ingresa Fecha de Ingreso</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group my-label required">
                                                            <label>Fecha de Retiro</label>
                                                            <input class="form-control mb-4" id="inputFechaRetiro" type="date" name="fecha_retiro" required>
                                                            <div class="invalid-feedback">Ingresa Fecha de Retiro</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <button class="btn btn-success mb-2 mt-2 pull-right" type="submit">Crear nuevo contrato</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/footer.ejs') %>

<script>
    $(document).ready(function() {
      $('#datatables').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ],
        "pagingType": "full_numbers",
        "pageLength": 15,
        "bLengthChange": false,
        responsive: true,
        language: {
            search: "_INPUT_",
            info: "Viendo página _PAGE_ de _PAGES_",
            zeroRecords: "No hay información que mostrar",
            infoEmpty: "Sin información",
            searchPlaceholder: "Buscar contrato",
            "paginate": {
                "first": "Primero",
                "last": "Último",
                "next": "Siguiente",
                "previous": "Anterior"
            },
            "buttons": {
                "copy": "Copiar",
                "colvis": "Visibilidad",
                "collection": "Colección",
                "colvisRestore": "Restaurar visibilidad",
                "copySuccess": {
                    "1": "Copiada 1 fila al portapapeles",
                    "_": "Copiadas %d fila al portapapeles"
                },
                "copyTitle": "Copiar al portapapeles",
                "csv": "CSV",
                "excel": "Excel",
                "pageLength": {
                    "-1": "Mostrar todas las filas",
                    "_": "Mostrar %d filas"
                },
                "pdf": "PDF",
                "print": "Imprimir"
            }
        }
      });
      var table = $('#datatable').DataTable();
    });
</script>

<script> (function () {
    'use strict';
    window.addEventListener('load', function () {
        var forms = document.getElementsByClassName('formValidation');
        var validation = Array.prototype.filter.call(forms, function (form) {
            form.addEventListener('submit', function (event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
  })();
</script>

</body>
</html>