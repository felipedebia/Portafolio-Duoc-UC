<%- include('partials/nav.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-tabs card-header-success">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <span class="nav-tabs-title">Ordenes:</span>
                                    <ul class="nav nav-tabs" data-tabs="tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="#listadoOrdenesBodegas" data-toggle="tab">
                                                <i class="material-icons">format_list_bulleted</i> Listado de Ordenes Bodegas
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#crearOrdenBodega" data-toggle="tab">
                                                <i class="material-icons">add</i> Crear nueva Orden Bodega
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="listadoOrdenesBodegas">
                                    <div class="card-body table-responsive">
                                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                            <thead class="text-info">
                                                <th scope="col">Orden N°</th>
                                                <th scope="col">Fecha de ingreso</th>
                                                <th scope="col">Fecha de retiro</th>
                                                <th scope="col">Estado de la orden</th>
                                                <th class="disabled-sorting">Opciones</th>
                                            </thead>
                                            <tbody>
                                                <% for(var ordenBodega of OrdenesBodegas) { %>
                                                    <tr>
                                                        <th scope="row">
                                                            <%= ordenBodega.id_ordenB %>
                                                        </th>
                                                        <td>
                                                            <%= ordenBodega.fecha_ingreso %>
                                                        </td>
                                                        <td>
                                                            <%= ordenBodega.fecha_retiro %>
                                                        </td>
                                                        <td>
                                                            <%= ordenBodega.fk_id_estado %>
                                                        </td>
                                                        <td>
                                                            <a class="card-link" href="/orden_bodega/<%= ordenBodega.id_ordenB %>">Ver contrato</a>
                                                            <a class="card-link" href="/modificarOrdenBodega/<%= ordenBodega.id_ordenB %>">Modificar</a>
                                                            <a class="card-link" href="../api_ordenes/anularOrdenBodega/<%= ordenBodega.id_ordenB %>">Anular</a>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="crearOrdenBodega">
                                    <div class="card-body">
                                        <h3 class="card-title mb-4">Ingresa los datos de la nueva orden</h3>
                                        <div class="card-text">
                                            <form action="../api_ordenes/crearOrdenBodega" method="POST" class="formValidation" novalidate>
                                                <div class="row">
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Fecha de inicio *</label>
                                                            <input class="form-control mb-4" id="inputFechaInicio" type="date" name="fecha_inicio" required>
                                                            <div class="invalid-feedback">Ingresa Fecha de inicio</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Fecha de vencimiento *</label>
                                                            <input class="form-control mb-4" id="inputFechaVencimiento" type="date" name="fecha_vencimiento" required>
                                                            <div class="invalid-feedback">Ingresa Fecha de vencimiento</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mb-4">
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Tipo de Contrato *</label>
                                                            <select class="selectpicker form-control" data-size="6" name="fk_id_tipo" data-style="select-with-transition btn" title="Selecciona una opción">
                                                                <option name="productor" value="1">Productor</option>
                                                                <option name="clienteInterno" value="2">Cliente Interno</option>
                                                                <option name="clienteExterno" value="3">Cliente Externo</option>
                                                                <option name="transportista" value="4">Transportista</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Asignar al usuario *</label>
                                                            <select class="selectpicker form-control" data-size="<% Usuarios.length %>" name="id_usuario" data-style="select-with-transition btn" title="Selecciona una opción">
                                                                <% for(var i=0; i < Usuarios.length; i++) { %>
                                                                <option name="<%= Usuarios[i].nombre %> <%= Usuarios[i].apellido %>" value="<%= Usuarios[i].id_usuario %>"><%= Usuarios[i].nombre %> <%= Usuarios[i].apellido %></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="btn btn-warning mb-2 mt-2 float-left">
                                                    <input type="file" name="url_documento">
                                                </div>
                                                <button class="btn btn-success mb-2 mt-2 pull-right" type="submit"><i class="fas fa-sign-in-alt"></i> Crear nuevo contrato</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/footer.ejs') %>

<script>
    $(document).ready(function() {
      $('#datatables').DataTable({
        "pagingType": "full_numbers",
        "pageLength": 15,
        "bLengthChange": false,
        responsive: true,
        language: {
          search: "_INPUT_",
          info: "Viendo página _PAGE_ de _PAGES_",
          zeroRecords: "No hay información que mostrar",
          infoEmpty: "Sin información",
          searchPlaceholder: "Buscar contrato",
        }
      });
      var table = $('#datatable').DataTable();
    });
</script>

</body>
</html>