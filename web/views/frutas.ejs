<%- include('partials/nav.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-tabs card-header-warning">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <span class="nav-tabs-title">Frutas:</span>
                                    <ul class="nav nav-tabs" data-tabs="tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="#listadoFrutas" data-toggle="tab">
                                                <i class="material-icons">format_list_bulleted</i> Listado de Frutas
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#crearFruta" data-toggle="tab">
                                                <i class="material-icons">add</i> Agregar nueva fruta
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="listadoFrutas">
                                    <div class="card-body table-responsive">
                                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                            <thead class="text-info">
                                                <th scope="col">Nombre</th>
                                                <th scope="col">Cantidad</th>
                                                <th scope="col">Tipo de calidad</th>
                                                <th scope="col">Precio por unidad</th>
                                                <th class="disabled-sorting">Opciones</th>
                                            </thead>
                                            <tbody>
                                                <% for(var i=0; i < Frutas.length; i++) { %>
                                                    <tr>
                                                        <th scope="row">
                                                            <%= Frutas[i].id_fruta %>
                                                        </th>
                                                        <td>
                                                            <%= Frutas[i].cantidad %>
                                                        </td>
                                                        <td>
                                                            <%= Frutas[i].tipo_calidad %>
                                                        </td>
                                                        <td>
                                                            $<%= Frutas[i].precio_por_unidad %>
                                                        </td>
                                                        <td>
                                                            <a class="card-link" href="/modificarFruta/<%= Frutas[i].id_fruta %>">Ver</a><a class="card-link" href="../api_frutas/eliminarFruta/<%= Frutas[i].id_fruta %>">Eliminar</a>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="crearFruta">
                                    <div class="card-body">
                                        <h3 class="card-title mb-4">Ingresa los datos de la nueva fruta</h3>
                                        <div class="card-text">
                                            <form action="../api_frutas/crearFruta" method="POST" class="formValidation" novalidate>
                                                <div class="row">
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Fecha de inicio *</label><input class="form-control input-sm" id="inputFechaInicio" type="date" name="fecha_inicio" required data-toggle="datepicker">
                                                            <div class="invalid-feedback">Ingresa Fecha de inicio</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Fecha de vencimiento *</label><input class="form-control input-sm" id="inputFechaVencimiento" type="date" name="fecha_vencimiento" required data-toggle="datepicker">
                                                            <div class="invalid-feedback">Ingresa Fecha de vencimiento</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label>Asignar al productor *</label>
                                                    <select class="selectpicker form-control" data-size="<% Usuarios.length %>" name="id_usuario" data-style="select-with-transition btn" title="Selecciona una opci칩n">
                                                        <% for(var i=0; i < Usuarios.length; i++) { %>
                                                        <option name="<%= Usuarios[i].nombre %> <%= Usuarios[i].apellido %>" value="<%= Usuarios[i].id_usuario %>"><%= Usuarios[i].nombre %> <%= Usuarios[i].apellido %></option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                <button class="btn btn-warning mb-2 pull-right" type="submit"><i class="fas fa-sign-in-alt"></i> Crear nuevo contrato</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/footer.ejs') %>

<script>
    $(document).ready(function() {
      $('#datatables').DataTable({
        "pagingType": "full_numbers",
        "pageLength": 15,
        "bLengthChange": false,
        responsive: true,
        language: {
          search: "_INPUT_",
          info: "Viendo p치gina _PAGE_ de _PAGES_",
          zeroRecords: "No hay informaci칩n que mostrar",
          infoEmpty: "Sin informaci칩n",
          searchPlaceholder: "Buscar fruta",
        }
      });

      var table = $('#datatable').DataTable();

    });
</script>

<script>
    $(function() {
      $('[data-toggle="datepicker"]').datepicker({
        autoHide: true,
        language: 'es-ES',
        format: 'dd-mm-yyyy'
      });
    });
</script>

</body>
</html>