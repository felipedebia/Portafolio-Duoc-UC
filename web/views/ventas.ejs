<%- include('partials/nav.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-tabs card-header-warning">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <span class="nav-tabs-title">Ventas:</span>
                                    <ul class="nav nav-tabs" data-tabs="tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="#listadoVentas" data-toggle="tab">
                                                <i class="material-icons">format_list_bulleted</i> Listado de Ventas
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#crearVenta" data-toggle="tab">
                                                <i class="material-icons">add</i> Crear nueva venta
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="listadoVentas">
                                    <div class="card-body table-responsive">
                                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                            <thead class="text-info">
                                                <th scope="col">Venta N°</th>
                                                <th scope="col">Fecha de Creacion</th>
                                                <th scope="col">Fecha de Actualizacion</th>
                                                <th scope="col">Tipo Venta</th>
                                                <th scope="col">Estado de la Venta</th>
                                            </thead>
                                            <tbody>
                                                <% for(var venta of Ventas) { %>
                                                    <tr>
                                                        <th scope="row">
                                                            <%= venta.id_venta %>
                                                        </th>
                                                        <td>
                                                            <%= venta.fecha_creacion %>
                                                        </td>
                                                        <td>
                                                            <%= venta.fecha_actualizacion %>
                                                        </td>
                                                        <td>
                                                            <%= venta.fk_texto_tipo %>
                                                        </td>
                                                        <td>
                                                            <%= venta.fk_texto_estado %>
                                                        </td>
                                                        <td>
                                                            <a class="card-link" href="/venta/<%= venta.id_venta %>">Ver venta</a>
                                                            <a class="card-link" href="/modificarVenta/<%= venta.id_venta %>">Modificar</a>
                                                            <a class="card-link" href="../api_ventas/anularVenta/<%= venta.id_venta %>">Anular</a>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="crearVenta">
                                    <div class="card-body">
                                        <h3 class="card-title mb-4">Ingresa los datos de la nueva venta</h3>
                                        <div class="card-text">
                                            <form action="../api_ventas/crearVenta" method="POST" class="formValidation" novalidate>
                                                <div class="row">
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Fecha de Creacion *</label>
                                                            <input class="form-control mb-4" id="inputFechaCreacion" type="date" name="fecha_creacion" required>
                                                            <div class="invalid-feedback">Ingresa Fecha de Creacion</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mb-4">
                                                </div>
                                                <div class="btn btn-warning mb-2 mt-2 float-left">
                                                    <input type="file" name="url_documento">
                                                </div>
                                                <button class="btn btn-warning mb-2 mt-2 pull-right" type="submit"><i class="fas fa-sign-in-alt"></i> Crear nueva venta</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/footer.ejs') %>

<script>
    $(document).ready(function() {
      $('#datatables').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ],
        "pagingType": "full_numbers",
        "pageLength": 15,
        "bLengthChange": false,
        responsive: true,
        language: {
            search: "_INPUT_",
            info: "Viendo página _PAGE_ de _PAGES_",
            zeroRecords: "No hay información que mostrar",
            infoEmpty: "Sin información",
            searchPlaceholder: "Buscar venta",
            "paginate": {
                "first": "Primero",
                "last": "Último",
                "next": "Siguiente",
                "previous": "Anterior"
            },
            "buttons": {
                "copy": "Copiar",
                "colvis": "Visibilidad",
                "collection": "Colección",
                "colvisRestore": "Restaurar visibilidad",
                "copySuccess": {
                    "1": "Copiada 1 fila al portapapeles",
                    "_": "Copiadas %d fila al portapapeles"
                },
                "copyTitle": "Copiar al portapapeles",
                "csv": "CSV",
                "excel": "Excel",
                "pageLength": {
                    "-1": "Mostrar todas las filas",
                    "_": "Mostrar %d filas"
                },
                "pdf": "PDF",
                "print": "Imprimir"
            }
        }
      });
      var table = $('#datatable').DataTable();
    });
</script>

</body>
</html>