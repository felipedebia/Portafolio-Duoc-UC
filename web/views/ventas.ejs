<%- include('partials/nav.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-tabs card-header-warning">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <span class="nav-tabs-title">Ventas:</span>
                                    <ul class="nav nav-tabs" data-tabs="tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="#listadoVentas" data-toggle="tab">
                                                <i class="material-icons">format_list_bulleted</i> Listado de Ventas
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="listadoVentas">
                                    <div class="card-body table-responsive">
                                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                            <thead class="text-info">
                                                <th scope="col">Venta N°</th>
                                                <th scope="col">Fecha de actualización</th>
                                                <th scope="col">Tipo de venta</th>
                                                <th scope="col">Estado</th>
                                                <th scope="col">Opciones</th>
                                            </thead>
                                            <tbody>
                                                <% for(var venta of Ventas) { %>
                                                    <div class="modal fade" id="modalVentaDetalle<%= venta.id_venta %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="exampleModalLabel">ID Venta #
                                                                        <%= venta.id_venta %>
                                                                    </h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <span><strong>Fecha de creación:</strong> <%= venta.fecha_creacion %></span></br>
                                                                    <span><strong>Fecha de última actualización:</strong> <%= venta.fecha_actualizacion %></span></br>
                                                                    <div class="mt-4">
                                                                        <h4><strong>Detalles de la venta</strong></h4>
                                                                        <ul>
                                                                            <% for(var venta_detalle of VentaDetalles){ %>
                                                                                <%if(venta_detalle.fk_id_venta == venta.id_venta){%>
                                                                                    <li><strong>Costos de frutas:</strong> <%= venta_detalle.costo_fruta %></li>
                                                                                    <li><strong>Costos de transportes:</strong> <%= venta_detalle.costo_transporte %></li>
                                                                                    <li><strong>Costos de impuestos:</strong> <%= venta_detalle.costo_impuestos %></li>
                                                                                    <li><strong>Comisión de servicio:</strong> <%= venta_detalle.comision_servicio %></li>
                                                                                    <li><strong>Comisión de empresa:</strong> <%= venta_detalle.comision_empresa %></li>
                                                                                    <li><strong>PRECIO FINAL:</strong> <%= venta_detalle.precio_final %></li>
                                                                                <% } %>
                                                                            <% } %>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal fade" id="modalGenerarDetalle<%= venta.id_venta %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <form action="/api_ventas/crearVentaDetalle/<%= venta.id_venta %>" method="POST">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="exampleModalLabel">ID Venta #
                                                                            <%= venta.id_venta %>
                                                                        </h5>
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <span><strong>Fecha de creación:</strong> <%= venta.fecha_creacion %></span></br>
                                                                        <span><strong>Fecha de última actualización:</strong> <%= venta.fecha_actualizacion %></span></br>
                                                                        <div class="mt-4">
                                                                            <h4><strong>Detalles de la venta</strong></h4></br>
                                                                            <% for(var subasta_fruta of SubastasFrutas){ %>
                                                                                <%if(subasta_fruta.fk_id_pedido == venta.id_venta && venta.fk_id_estado == 2){%>
                                                                                    <span><strong>Costo de frutas:</strong> <%= subasta_fruta.id_venta %> </span></br>
                                                                                    <span><strong>Costo de transportes:</strong> <%= subasta_fruta.id_venta %> </span></br></br>
                                                                                <% } %>
                                                                            <% } %>
                                                                            
                                                                        </div>
                                                                        
                                                                        <div class="row">
                                                                            <div class="col-xs-6 col-sm-6 col-md-6">
                                                                                <div class="form-group my-label required">
                                                                                    <label>Costos de impuesto</label>
                                                                                    <input class="form-control mb-4" id="costo_impuestos" type="number" name="costo_impuestos" maxLength="25" required>
                                                                                    <div class="invalid-feedback">Ingresa Costo Impuesto</div>
                                                                                </div>
                                                                            </div>
                                                                            <div class="col-xs-6 col-sm-6 col-md-6">
                                                                                <div class="form-group my-label required">
                                                                                    <label>Comisión de servicio</label>
                                                                                    <input class="form-control mb-4" id="comision_servicio" type="number" name="comision_servicio" maxLength="25" required>
                                                                                    <div class="invalid-feedback">Ingresa Comisión Servicio</div>
                                                                                </div>
                                                                            </div>
                                                                            <div class="col-xs-6 col-sm-6 col-md-6">
                                                                                <div class="form-group my-label required">
                                                                                    <label>Comisión de empresa</label>
                                                                                    <input class="form-control mb-4" id="comision_empresa" type="number" name="comision_empresa" maxLength="25" required>
                                                                                    <div class="invalid-feedback">Ingresa Comisión Empresa</div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button class="btn btn-primary" type="submit">Guardar detalles</button>
                                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <tr>
                                                        <th scope="row">
                                                            <%= venta.id_venta %>
                                                        </th>
                                                        <td>
                                                            <%= venta.fecha_actualizacion %>
                                                        </td>
                                                        <td>
                                                            <%= venta.fk_texto_tipo %>
                                                        </td>
                                                        <td>
                                                            <%= venta.fk_texto_estado %>
                                                        </td>
                                                        <td>
                                                            <a href="/informes/<%= venta.id_venta %>"><button type="button" class="btn btn-warning btn-sm">Ver informes</button></a>
                                                            <% if (venta.fk_id_estado == 1) { %>
                                                                <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#modalGenerarDetalle<%= venta.id_venta %>">Generar detalles</button>
                                                                <a href="../api_ventas/anularVenta/<%= venta.id_venta %>"><button type="button" class="btn btn-warning btn-sm">Anular</button></a>
                                                            <% } %>
                                                            <% if (venta.fk_id_estado == 2) { %>
                                                                    <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#modalVentaDetalle<%= venta.id_venta %>">Ver detalles</button>
                                                            <% } %>
                                                            <% if (venta.fk_id_estado == 3) { %>
                                                                <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#modalGenerarDetalle<%= venta.id_venta %>">Crear orden de bodega</button>
                                                            <% } %>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/footer.ejs') %>

<script>
    $(document).ready(function() {
      $('#datatables').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ],
        "pagingType": "full_numbers",
        "pageLength": 15,
        "bLengthChange": false,
        responsive: true,
        language: {
            search: "_INPUT_",
            info: "Viendo página _PAGE_ de _PAGES_",
            zeroRecords: "No hay información que mostrar",
            infoEmpty: "Sin información",
            searchPlaceholder: "Buscar venta",
            "paginate": {
                "first": "Primero",
                "last": "Último",
                "next": "Siguiente",
                "previous": "Anterior"
            },
            "buttons": {
                "copy": "Copiar",
                "colvis": "Visibilidad",
                "collection": "Colección",
                "colvisRestore": "Restaurar visibilidad",
                "copySuccess": {
                    "1": "Copiada 1 fila al portapapeles",
                    "_": "Copiadas %d fila al portapapeles"
                },
                "copyTitle": "Copiar al portapapeles",
                "csv": "CSV",
                "excel": "Excel",
                "pageLength": {
                    "-1": "Mostrar todas las filas",
                    "_": "Mostrar %d filas"
                },
                "pdf": "PDF",
                "print": "Imprimir"
            }
        }
      });
      var table = $('#datatable').DataTable();
    });
</script>

</body>
</html>