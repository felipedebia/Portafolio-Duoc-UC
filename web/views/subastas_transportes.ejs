<%- include('partials/nav.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-tabs card-header-warning">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <span class="nav-tabs-title">Subastas:</span>
                                    <ul class="nav nav-tabs" data-tabs="tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="#listadoSubastas" data-toggle="tab">
                                                <i class="material-icons">format_list_bulleted</i> Listado de Subastas
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="listadoSubastas">
                                    <div class="card-body table-responsive">
                                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                            <thead class="text-info">
                                                <th scope="col">Subasta N°</th>
                                                <th scope="col">Fecha de creación</th>
                                                <th scope="col">Fecha de termino</th>
                                                <th scope="col">Estado</th>
                                                <th class="disabled-sorting">Opciones</th>
                                            </thead>
                                            <tbody>
                                                <% for(var i=0; i < SubastasTransportes.length; i++) { %>
                                                    <tr>
                                                        <th scope="row">
                                                            <%= SubastasTransportes[i].id_subastaF %>
                                                        </th>
                                                        <td>
                                                            <%= SubastasTransportes[i].fecha_creacion %>
                                                        </td>
                                                        <td>
                                                            <%= SubastasTransportes[i].fecha_termino %>
                                                        </td>
                                                        <td>
                                                            <%= SubastasTransportes[i].fk_id_estado %>
                                                        </td>
                                                        <td>
                                                            <a class="card-link" href="/subasta_transporte/<%= SubastasTransportes[i].id_subastaT %>">Ver subasta</a><a class="card-link" href="/modificarSubastaTransporte/<%= SubastasTransportes[i].id_subastaT %>">Modificar</a><a class="card-link" href="../api_subastas/anularSubastaTransporte/<%= SubastasTransportes[i].id_subastaT %>">Anular</a>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/footer.ejs') %>

<script>
    $(document).ready(function() {
      $('#datatables').DataTable({
        "pagingType": "full_numbers",
        "pageLength": 15,
        "bLengthChange": false,
        responsive: true,
        language: {
          search: "_INPUT_",
          info: "Viendo página _PAGE_ de _PAGES_",
          zeroRecords: "No hay información que mostrar",
          infoEmpty: "Sin información",
          searchPlaceholder: "Buscar contrato",
        }
      });
      var table = $('#datatable').DataTable();
    });
</script>

</body>
</html>