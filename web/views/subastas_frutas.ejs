<%- include('partials/nav.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-tabs card-header-warning">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <span class="nav-tabs-title">Subastas:</span>
                                    <ul class="nav nav-tabs" data-tabs="tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="#listadoSubastas" data-toggle="tab">
                                                <i class="material-icons">format_list_bulleted</i> Listado de Subastas
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#crearSubasta" data-toggle="tab">
                                                <i class="material-icons">add</i> Crear nueva subasta
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="listadoSubastas">
                                    <div class="card-body table-responsive">
                                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                            <thead class="text-info">
                                                <th scope="col">Subasta N°</th>
                                                <th scope="col">Fecha de creación</th>
                                                <th scope="col">Fecha de termino</th>
                                                <th scope="col">Estado</th>
                                                <th class="disabled-sorting">Opciones</th>
                                            </thead>
                                            <tbody>
                                                <% for(var subastaFruta of SubastasFrutas) { %>
                                                    <tr>
                                                        <th scope="row">
                                                            <%= subastaFruta.id_subastaF %>
                                                        </th>
                                                        <td>
                                                            <%= subastaFruta.fecha_creacion %>
                                                        </td>
                                                        <td>
                                                            <%= subastaFruta.fecha_termino %>
                                                        </td>
                                                        <td>
                                                            <%= subastaFruta.fk_id_estado %>
                                                        </td>
                                                        <td>
                                                            <a class="card-link" href="/subasta_fruta/<%= subastaFruta.id_subastaF %>">Ver subasta</a>
                                                            <a class="card-link" href="/modificarSubastaFruta/<%= subastaFruta.id_subastaF %>">Modificar</a>
                                                            <a class="card-link" href="../api_subastas/anularSubastaFruta/<%= subastaFruta.id_subastaF %>">Anular</a>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="crearSubasta">
                                    <div class="card-body">
                                        <h3 class="card-title mb-4">Ingresa los datos del nuevo contrato</h3>
                                        <div class="card-text">
                                            <form action="../api_contratos/crearContrato" method="POST" class="formValidation" novalidate>
                                                <div class="row">
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Fecha de termino *</label>
                                                            <input class="form-control mb-4" id="inputFechaTermino" type="date" name="fecha_termino" required>
                                                            <div class="invalid-feedback">Ingresa Fecha de termino</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Fecha de vencimiento *</label>
                                                            <input class="form-control mb-4" id="inputFechaVencimiento" type="date" name="fecha_vencimiento" required>
                                                            <div class="invalid-feedback">Ingresa Fecha de vencimiento</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mb-4">
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Tipo de Contrato *</label>
                                                            <select class="selectpicker form-control" data-size="6" name="fk_id_tipo" data-style="select-with-transition btn" title="Selecciona una opción">
                                                                <option name="productor" value="1">Productor</option>
                                                                <option name="clienteInterno" value="2">Cliente Interno</option>
                                                                <option name="clienteExterno" value="3">Cliente Externo</option>
                                                                <option name="transportista" value="4">Transportista</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <label>Asignar al usuario *</label>
                                                            <select class="selectpicker form-control" data-size="<% Usuarios.length %>" name="id_usuario" data-style="select-with-transition btn" title="Selecciona una opción">
                                                                <% for(var usuario of Usuarios) { %>
                                                                <option name="<%= usuario.nombre %> <%= usuario.apellido %>" value="<%= usuario.id_usuario %>"><%= usuario.nombre %> <%= usuario.apellido %></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="btn btn-warning mb-2 mt-2 float-left">
                                                    <input type="file" name="url_documento">
                                                </div>
                                                <button class="btn btn-warning mb-2 mt-2 pull-right" type="submit"><i class="fas fa-sign-in-alt"></i> Crear nuevo contrato</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/footer.ejs') %>

<script>
    $(document).ready(function() {
      $('#datatables').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ],
        "pagingType": "full_numbers",
        "pageLength": 15,
        "bLengthChange": false,
        responsive: true,
        language: {
            search: "_INPUT_",
            info: "Viendo página _PAGE_ de _PAGES_",
            zeroRecords: "No hay información que mostrar",
            infoEmpty: "Sin información",
            searchPlaceholder: "Buscar contrato",
            "paginate": {
                "first": "Primero",
                "last": "Último",
                "next": "Siguiente",
                "previous": "Anterior"
            },
            "buttons": {
                "copy": "Copiar",
                "colvis": "Visibilidad",
                "collection": "Colección",
                "colvisRestore": "Restaurar visibilidad",
                "copySuccess": {
                    "1": "Copiada 1 fila al portapapeles",
                    "_": "Copiadas %d fila al portapapeles"
                },
                "copyTitle": "Copiar al portapapeles",
                "csv": "CSV",
                "excel": "Excel",
                "pageLength": {
                    "-1": "Mostrar todas las filas",
                    "_": "Mostrar %d filas"
                },
                "pdf": "PDF",
                "print": "Imprimir"
            }
        }
      });
      var table = $('#datatable').DataTable();
    });
</script>

</body>
</html>